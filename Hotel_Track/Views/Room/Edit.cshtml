@model Room

@{
    ViewBag.Title = "Edit Room";
}

<h2 class="text-center mb-4">Edit Room</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data" class="create-room-form">
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-3">
        <label asp-for="Number" class="form-label"></label>
        <input asp-for="Number" class="form-control" />
        <span asp-validation-for="Number" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="PricePerNight" class="form-label"></label>
        <input asp-for="PricePerNight" class="form-control" />
        <span asp-validation-for="PricePerNight" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="IsAvailable" class="form-label"></label>
        <input asp-for="IsAvailable" class="form-check-input" type="checkbox" />
        <span asp-validation-for="IsAvailable" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control custom-textarea"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="RoomType" class="form-label"></label>
        <select asp-for="RoomType" class="form-control custom-select" asp-items="Html.GetEnumSelectList<EnumRoomType>()"></select>
        <span asp-validation-for="RoomType" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="HotelId" class="form-label">Hotel</label>
        <select asp-for="HotelId" class="form-control custom-select" asp-items="ViewBag.hotelId"></select>
        <span asp-validation-for="HotelId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ImgUrl" class="form-label">Upload Image</label>
        <input asp-for="ImgUrl" class="form-control" type="file" name="ImgUrl" />
        @if (!string.IsNullOrEmpty(Model.ImgUrl))
        {
            <div class="mt-2">
                <p>Current Image:</p>
                <img src="~/images/Rooms/@Model.ImgUrl" alt="Room Image" width="200" />
            </div>
        }
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary w-100">Save</button>
    </div>

    <div class="form-group mt-3">
        <a asp-action="Index" class="btn btn-secondary w-100">Cancel</a>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

<style>
    /* Form container styles */
    .create-room-form {
        background-color: #f8f9fa;
        padding: 25px;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        margin-top: 50px;
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
    }

    /* Heading styles */
    h2 {
        font-size: 2.2em;
        font-weight: bold;
        color: #343a40;
        margin-bottom: 20px;
    }

    /* Label styling */
    .form-label {
        font-weight: bold;
        color: #495057;
        font-size: 1rem;
    }

    /* Form controls (input, select, textarea) */
    .form-control {
        border-radius: 6px;
        border: 1px solid #ced4da;
        padding: 12px 14px;
        font-size: 1rem;
        transition: border-color 0.3s ease;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }

    .custom-textarea {
        resize: vertical;
        min-height: 120px;
    }

    .custom-select {
        background-color: #ffffff;
        border-radius: 6px;
        padding: 12px 14px;
        font-size: 1rem;
        transition: border-color 0.3s ease;
    }

        .custom-select:focus {
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }

    /* Checkbox styling */
    .form-check-input {
        margin-top: 0.3rem;
    }

    /* Submit and Cancel buttons styling */
    .btn {
        padding: 12px 18px;
        font-size: 1.1rem;
        font-weight: bold;
        border-radius: 6px;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

        .btn:hover {
            background-color: #0056b3;
            transform: translateY(-2px);
        }

        .btn:focus {
            box-shadow: none;
        }

    /* Error message styling */
    .text-danger {
        font-size: 0.9rem;
    }

    /* Margin for form-group */
    .form-group {
        margin-bottom: 1.25rem;
    }

    /* Button full width */
    .w-100 {
        width: 100%;
    }
</style>
