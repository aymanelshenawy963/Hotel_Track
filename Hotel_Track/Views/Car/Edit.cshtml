@model Car

<div class="container">
    <h2 class="my-4">Edit Car</h2>

    <!-- Back to Car List Button -->
    <a href="@Url.Action("CarList", "Car")" class="btn btn-secondary mb-3"><i class="bi bi-arrow-left"></i> Back to Car List</a>

    <!-- Form to Edit Car -->
    <form asp-action="Edit" asp-controller="Car" method="post">
        <!-- Hidden field for the car's Id -->
        <input type="hidden" class="form-control" name="Id" value="@Model.Id" />

        <!-- Car Model -->
        <div class="mb-3">
            <label for="CarModel" class="form-label">Car Model</label>
            <input type="text" class="form-control" id="CarModel" name="CarModel" value="@Model.CarModel" required>
        </div>

        <!-- License Plate -->
        <div class="mb-3">
            <label for="LicensePlate" class="form-label">License Plate</label>
            <input type="text" class="form-control" id="LicensePlate" name="LicensePlate" value="@Model.LicensePlate" required>
        </div>

        <!-- Capacity -->
        <div class="mb-3">
            <label for="Capacity" class="form-label">Capacity</label>
            <input type="number" class="form-control" id="Capacity" name="Capacity" value="@Model.Capacity" required>
        </div>

        <!-- Rent Price Per Day -->
        <div class="mb-3">
            <label for="RentPricePerDay" class="form-label">Rent Price Per Day</label>
            <input type="number" class="form-control" id="RentPricePerDay" name="RentPricePerDay" value="@Model.RentPricePerDay" required>
        </div>

        <!-- Is Available (Checkbox for availability) -->
        <div class="mb-3">
            <label for="IsAvailable" class="form-label">Available</label>
            <input type="checkbox" class="form-check-input" id="IsAvailable" name="IsAvailable" @(Model.IsAvailable ? "checked" : "")>
            <label class="form-check-label" for="IsAvailable">Check if the car is available</label>
        </div>

        <!-- Location -->
        <div class="mb-3">
            <label for="Location" class="form-label">Location</label>
            <input type="text" class="form-control" id="Location" name="Location" value="@Model.Location" required>
        </div>

        <!-- Submit Button to Save Changes -->
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </form>
</div>
