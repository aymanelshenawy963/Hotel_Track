@model List<Car>
<div class="container mt-4">
    <h2 class="mb-3 text-center">Search Results</h2>

    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Car Model</th>
                    <th>Location</th>
                    <th>Rent Price Per Day</th>
                    <th>Capacity</th>
                    <th>Actions</th> <!-- New column for actions -->
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var car in Model)
                    {
                        <tr>
                            <td>@car.CarModel</td>
                            <td>@car.Location</td>
                            <td>@car.RentPricePerDay</td>
                            <td>@car.Capacity</td>
                            <td>
                                <a href="/Car/Book/@car.Id" class="btn btn-primary btn-sm">Book Now</a> <!-- Button -->
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center text-muted">No cars found for the given search criteria.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<style>
    table {
        font-size: 16px;
    }

    th {
        background-color: #343a40;
        color: #fff;
        text-align: center;
    }

    td {
        text-align: center;
        vertical-align: middle;
    }

    .table-container {
        margin-top: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        overflow: hidden;
    }

    .no-results {
        color: #888;
        font-size: 18px;
        margin-top: 20px;
        text-align: center;
    }
</style>
