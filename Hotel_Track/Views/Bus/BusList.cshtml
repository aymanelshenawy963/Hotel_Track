@model List<Bus>

<div class="container">
    <h2 class="my-4">Bus List</h2>

    <div class="d-flex justify-content-between mb-3">
        <a href="@Url.Action("Create", "Bus")" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Create New Bus
        </a>
        <a href="@Url.Action("Index", "Bus")" class="btn btn-primary">
            <i class="bi bi-house-door"></i> Bus Home Page
        </a>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>BusNumber</th>
                <th>TotalSeats</th>
                <th>Route</th>
                <th>DepartureTime</th>
                <th>ArrivalTime</th>
                <th>TicketPrice</th>
                <th>Amenities</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var bus in Model)
            {
                <tr>
                    <td>@bus.BusNumber</td>
                    <td>@bus.TotalSeats</td>
                    <td>@bus.Route</td>
                    <td>@bus.DepartureTime?.ToString("g")</td>
                    <td>@bus.ArrivalTime?.ToString("g")</td>
                    <td>@bus.TicketPrice</td>
                    <td>@(bus.Amenities != null ? string.Join(", ", bus.Amenities) : "N/A")</td>
                    <td>
                        <a href="@Url.Action("Edit", "Bus", new { id = bus.Id })" class="btn btn-warning btn-sm">Edit</a>
                        <a href="@Url.Action("Delete", "Bus", new { id = bus.Id })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this Bus?');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
